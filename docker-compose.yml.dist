# =============================================================================
# SEGINTEC - Campus Virtual (Moodle 4.1 LTS)
# =============================================================================
# Imagen: ellakcy/moodle (167k+ pulls, actualizada ene 2026)
# DB: PostgreSQL 15
# Proxy: Nginx Proxy Manager
# =============================================================================

services:
  # ---------------------------------------------------------------------------
  # PostgreSQL
  # ---------------------------------------------------------------------------
  db:
    image: postgres:15-alpine
    container_name: segintec_db
    restart: unless-stopped
    environment:
      POSTGRES_DB: ${DB_NAME}
      POSTGRES_USER: ${DB_USER}
      POSTGRES_PASSWORD: ${DB_PASSWORD}
    volumes:
      - segintec_pgdata:/var/lib/postgresql/data
    networks:
      - segintec_net
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U ${DB_USER} -d ${DB_NAME}"]
      interval: 30s
      timeout: 10s
      retries: 5
      start_period: 30s

  # ---------------------------------------------------------------------------
  # Moodle 4.1 LTS + PostgreSQL + Apache
  # ---------------------------------------------------------------------------
  moodle:
    image: ellakcy/moodle:postgresql_apache_404_php8.2
    container_name: segintec_moodle
    restart: unless-stopped
    depends_on:
      db:
        condition: service_healthy
    environment:
      MOODLE_URL: http://localhost:8080
      MOODLE_ADMIN: ${MOODLE_ADMIN_USER}
      MOODLE_ADMIN_PASSWORD: ${MOODLE_ADMIN_PASSWORD}
      MOODLE_ADMIN_EMAIL: ${MOODLE_ADMIN_EMAIL}
      MOODLE_DB_HOST: db
      MOODLE_DB_PORT: 5432
      MOODLE_DB_NAME: ${DB_NAME}
      MOODLE_DB_USER: ${DB_USER}
      MOODLE_DB_PASSWORD: ${DB_PASSWORD}
      MOODLE_SITE_NAME: ${MOODLE_SITE_NAME}
    volumes:
      - segintec_moodle:/var/www/html
      - segintec_moodledata:/var/moodledata
    networks:
      - segintec_net
    ports:
      - "8080:80"

  # ---------------------------------------------------------------------------
  # Nginx Proxy Manager (SSL + Let's Encrypt)
  # ---------------------------------------------------------------------------
  proxy:
    image: jc21/nginx-proxy-manager:latest
    container_name: segintec_proxy
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
      - "81:81"
    environment:
      TZ: ${TIMEZONE:-America/Mexico_City}
    volumes:
      - segintec_npm:/data
      - segintec_certs:/etc/letsencrypt
    networks:
      - segintec_net

volumes:
  segintec_pgdata:
  segintec_moodle:
  segintec_moodledata:
  segintec_npm:
  segintec_certs:

networks:
  segintec_net:
